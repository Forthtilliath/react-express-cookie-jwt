{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "declarationDir": "src/types",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        // "typeRoots": [
            // "src/types",
        //     "./@types",
        //     "./node_modules/@types" //this where npm packages containing types are located
        // ]
    },
    "include": ["./src/*", "src/types/*"]
}
